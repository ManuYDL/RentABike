

<%= simple_form_for [bike, booking] do |f| %>
  <%= f.input :date_range,
            as: :string,
            label: false,
            input_html: {
              data: { controller: "datepicker" },
              placeholder: "Click to select your reservation dates",
              style: "width: 305px; margin-left: 42px",
              class: "form-control custom-input"
            },
            class: "d-none" %>
  <%= f.submit class: "btn btn-primary rounded-3", style: "margin-left: 42px"%>
<% end %>

