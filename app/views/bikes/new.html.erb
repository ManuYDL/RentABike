  <div class="new-form" >
    <%= simple_form_for @bike do |f| %>
  <div class="form_text">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control text", placeholder: "Marcel"%>
  </div>

  <div class="form_description">
    <%= f.label :description%>
    <%= f.text_field :description, class: "form-control text", placeholder: "Fast, competent, reliable"%>
  </div>

  <div class="form_color">
    <%= f.label :color%>
    <%= f.text_field :color, class: "form-control text", placeholder: "Black"%>
  </div>

  <div class="form_price">
    <%= f.label :price %>
    <%= f.number_field :price, class: "form-control text", placeholder: "150" %>
  </div>

  <div class="form_photo">
    <%= f.input :photo, as: :file, class: "form-control text", placeholder: "Choose a picture"  %>
  </div>

    <%= f.submit value: "Add my bike", class: "btn btn-new rounded-3"%>
    <% end %>
</div>
